<div>
  <div>
    <h1>
      List of all members
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new member
    </h2>

    <form action="/insert_member" method="post">
      <div>
        <label for="role_box">
          Role
        </label>

        <input type="text" id="role_box" name="query_role">
      </div>

      <div>
        <label for="employee_id_box">
          Employee
        </label>

        <input type="text" id="employee_id_box" name="query_employee_id">
      </div>

      <button>
        Create member
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Role
        </th>
      </tr>

      <% @list_of_members.each do |a_member| %>
      <tr>
        <td>
          <%= a_member.id %>
        </td>

        <td>
          <%= a_member.role %>
        </td>

        <td>
          <%= time_ago_in_words(a_member.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_member.updated_at) %> ago
        </td>

        <td>
          <a href="/members/<%= a_member.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
