<div class="container">
  <h1>Employee List</h1>

  <%= render 'search_form' %>

  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Title</th>
        <th>Organization</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.title %></td>
          <td><%= employee.organization.name if employee.organization %></td>
          <td>
            <%= link_to 'View', employee_path(employee), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= form_with url: upload_csv_employees_path, method: :post, multipart: true, local: true do |f| %>
  <div class="form-group">
    <%= f.label :file, "Upload Employees CSV" %>
    <%= f.file_field :file, class: "form-control" %>
  </div>
  <%= f.submit "Upload Employees", class: "btn btn-primary mt-2" %>
<% end %>

</div>
