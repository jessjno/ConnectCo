<div class="container">
  <% if current_employee&.admin? %>
    <div class="card mb-4">
      <div class="card-body">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
          <!-- New Employee Button -->
          <div class="mb-2">
            <%= link_to new_employee_path, class: 'btn btn-primary' do %>
              <i class="bi bi-person-plus-fill me-1"></i> New Employee
            <% end %>
          </div>
          <div class="mb-2">
            <%= form_with url: upload_csv_employees_path, method: :post, multipart: true, local: true, html: { class: 'd-flex align-items-center' } do |f| %>
              <div class="me-2">
                <%= f.file_field :file, class: 'form-control' %>
              </div>
              <%= f.submit "Upload CSV", class: "btn btn-secondary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <h1 class="card-title">Employee List</h1>

      <%= search_form_for @q, url: employees_path, method: :get, class: "mb-4" do |f| %>
        <div class="row g-2">
          <!-- Filter by Organization -->
          <div class="col-md-3">
            <%= f.collection_select :organization_id_eq, Organization.all, :id, :name, 
                  { prompt: "Filter by Organization" }, 
                  { class: "form-select" } %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :title_cont, placeholder: "Filter by Title", class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :first_name_cont, placeholder: "Filter by First Name", class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.submit "Filter", class: "btn btn-primary w-100" %>
          </div>
        </div>
      <% end %>

      <div class="mb-3">
        <%= link_to "Sort by Last Name", employees_path(q: { s: 'last_name asc' }), class: "btn btn-link" %>
        <%= link_to "Sort by First Name", employees_path(q: { s: 'first_name asc' }), class: "btn btn-link" %>
        <%= link_to "Sort by Title", employees_path(q: { s: 'title asc' }), class: "btn btn-link" %>
      </div>
    </div>
  </div>

  <div class="row">
    <% @employees.each do |employee| %>
      <div class="col-md-4 mb-4">
        <div class="card rounded-3" style="width: 18rem;">
          <img class="card-img-top" src="<%= employee.image_url.presence || asset_path('default_profile.png') %>" alt="<%= employee.first_name %>'s profile photo">
          <div class="card-body">
            <h5 class="card-title"><%= employee.first_name %> <%= employee.last_name %></h5>
            <p class="card-text">
              <strong>Title:</strong> <%= employee.title %><br>
              <strong>Organization:</strong> <%= employee.organization&.name || "No Organization Assigned" %>
            </p>
            <%= link_to 'View Profile', employee_path(employee), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4 d-flex justify-content-center">
    <%= paginate @employees %>
  </div>
</div>
