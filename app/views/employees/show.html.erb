<div class="container py-4">
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex align-items-center">
      <img src="<%= @employee.profile_image || asset_path('default_profile.png') %>"
           alt="<%= @employee.first_name %>'s Profile Photo"
           class="rounded-circle me-3"
           style="width: 100px; height: 100px; object-fit: cover;">
      <div>
        <h2 class="card-title mb-1 text-primary">
          <%= @employee.first_name %> <%= @employee.last_name %>
        </h2>
        <p class="mb-0 text-muted"><i class="bi bi-envelope me-1"></i><%= @employee.email %></p>
        <p class="mb-0 text-muted"><i class="bi bi-briefcase me-1"></i><%= @employee.title %></p>
        <p class="mb-0 text-muted"><i class="bi bi-building me-1"></i><%= @employee.organization.name %></p>
      </div>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0"><i class="bi bi-list-task me-2"></i> Responsibilities</h5>
    </div>
    <div class="card-body">
      <% if @responsibilities.any? %>
        <ul class="list-group">
          <% @responsibilities.each do |responsibility| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= responsibility.description %>
              <div>
                <% if policy(responsibility).edit? %>
                  <%= link_to 'Edit', edit_employee_responsibility_path(@employee, responsibility), class: 'btn btn-sm btn-secondary me-2' %>
                <% end %>
                <% if policy(responsibility).destroy? %>
                  <%= button_to 'Delete', employee_responsibility_path(@employee, responsibility), method: :delete, data: { confirm: "Are you sure you want to delete this responsibility?" }, class: 'btn btn-sm btn-danger' %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">No responsibilities assigned.</p>
      <% end %>
    </div>
    <% if policy(@employee).can_manage_responsibilities? %>
      <div class="card-footer">
        <%= render 'responsibilities/form', employee: @employee, responsibility: Responsibility.new %>
      </div>
    <% end %>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i> Reports To</h5>
    </div>
    <div class="card-body">
      <% if @employee.manager.present? %>
        <p>
          <%= link_to "#{@employee.manager.first_name} #{@employee.manager.last_name}",
                      employee_path(@employee.manager),
                      class: "text-primary" %>
          (<%= @employee.manager.title || "N/A" %>)
        </p>
      <% else %>
        <p class="text-muted mb-0">This employee does not report to anyone.</p>
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0"><i class="bi bi-people-fill me-2"></i> Direct Reports</h5>
    </div>
    <div class="card-body">
      <% if @employee.subordinates.any? %>
        <ul class="list-group">
          <% @employee.subordinates.each do |subordinate| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to "#{subordinate.first_name} #{subordinate.last_name}",
                          employee_path(subordinate),
                          class: "text-primary" %>
              <span class="badge bg-secondary"><%= subordinate.title || "N/A" %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted mb-0">No direct reports.</p>
      <% end %>
    </div>
  </div>

  <% if current_employee.admin? %>
    <div class="d-flex justify-content-between">
      <%= link_to "Reassign Organization", edit_organization_employee_path(@employee), class: "btn btn-secondary btn-sm" %>
      <%= link_to "Update Manager", edit_manager_employee_path(@employee), class: "btn btn-primary btn-sm" %>
      <%= button_to "Delete Employee", employee_path(@employee), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this employee?" } %>
    </div>
  <% end %>

  <div class="mt-4 d-flex justify-content-between">
    <%= link_to 'Back to Employee List', employees_path, class: 'btn btn-outline-secondary' %>
    <%= link_to 'Back to Organization', organization_path(@employee.organization_id), class: "btn btn-outline-secondary" %>
  </div>
</div>
