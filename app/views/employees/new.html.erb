<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header mb-4 text-light">
      <h4 class="mb-0 d-flex align-items-center text-light">
        <i class="bi bi-person-plus-fill me-2"></i> Create New Employee
      </h4>
    </div>
    <div class="card-body">
      <%= form_with model: @employee, url: employees_path, method: :post, local: true do |form| %>
        <div class="row g-3">
          <!-- First Name -->
          <div class="col-md-6">
            <%= form.label :first_name, "First Name", class: "form-label fw-bold" %>
            <%= form.text_field :first_name, class: "form-control", placeholder: "Enter first name" %>
          </div>

          <!-- Last Name -->
          <div class="col-md-6">
            <%= form.label :last_name, "Last Name", class: "form-label fw-bold" %>
            <%= form.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
          </div>
        </div>

        <!-- Email -->
        <div class="mt-3">
          <%= form.label :email, "Email", class: "form-label fw-bold" %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter email address" %>
        </div>

        <!-- Password -->
        <div class="row g-3 mt-3">
          <div class="col-md-6">
            <%= form.label :password, "Password", class: "form-label fw-bold" %>
            <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
          </div>
          <div class="col-md-6">
            <%= form.label :password_confirmation, "Confirm Password", class: "form-label fw-bold" %>
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
          </div>
        </div>

        <!-- Title -->
        <div class="mt-3">
          <%= form.label :title, "Title", class: "form-label fw-bold" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter job title" %>
        </div>

        <!-- Organization -->
        <div class="mt-3">
          <%= form.label :organization_id, "Assign to Organization", class: "form-label fw-bold" %>
          <%= form.collection_select :organization_id, Organization.all, :id, :name, 
                prompt: "Select an Organization", 
                class: "form-select" %>
        </div>

        <!-- Manager -->
        <div class="mt-3">
          <%= form.label :manager_id, "Assign Manager", class: "form-label fw-bold" %>
          <%= form.collection_select :manager_id, Employee.all, :id, :full_name, 
                prompt: "Select a Manager", 
                class: "form-select" %>
        </div>

        <!-- Submit Button -->
        <div class="mt-4 d-flex justify-content-end">
          <%= form.submit "Create Employee", class: "btn btn-primary px-4" %>
        </div>
      <% end %>

      <% if @employee.errors.any? %>
        <div class="alert alert-danger">
          <h4>There were errors with your submission:</h4>
          <ul>
            <% @employee.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
