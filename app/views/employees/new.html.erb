<div class="container">
  <h1>Create New Employee</h1>

  <%= form_with model: @employee, url: employees_path, method: :post do |form| %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :organization_id, "Organization" %>
      <%= form.select :organization_id, options_for_select(Organization.all.pluck(:name, :id)), include_blank: "Select Organization", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :member_id %>
      <%= form.select :member_id, Member.all.collect { |m| [m.role, m.id] }, { prompt: "Select Role" }, class: "form-control" %>
    </div>

    <%= form.submit "Create Employee", class: "btn btn-primary" %>
  <% end %>
</div>
