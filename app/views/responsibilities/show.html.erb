<div>
  <div>
    <h1>
      Responsibility #<%= @the_responsibility.id %> details
    </h1>

    <div>
      <div>
        <a href="/responsibilities">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_responsibility/<%= @the_responsibility.id %>">
          Delete responsibility
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_responsibility.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_responsibility.description %>
      </dd>

      <dt>
        Employee
      </dt>
      <dd>
        <%= @the_responsibility.employee_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_responsibility.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_responsibility.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit responsibility
    </h2>

    <form action="/modify_responsibility/<%= @the_responsibility.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_responsibility.name %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_responsibility.description %>">
      </div>

      <div>
        <label for="employee_id_box">
          Employee
        </label>

        <input type="text" id="employee_id_box" name="query_employee_id" value="<%= @the_responsibility.employee_id %>">
      </div>

      <button>
        Update responsibility
      </button>
    </form>
  </div>
</div>

<hr>
