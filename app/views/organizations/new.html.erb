<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header mb-4 text-light custom-header-dark">
      <h4 class="mb-0 d-flex align-items-center text-light">
        <i class="bi bi-building-fill me-2"></i> Create New Organization
      </h4>
    </div>
    <div class="card-body">
      <%= form_with model: @organization, url: organizations_path, method: :post, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :name, "Organization Name", class: "form-label fw-bold" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter organization name", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :description, "Description", class: "form-label fw-bold" %>
          <%= form.text_area :description, class: "form-control", placeholder: "Enter organization description" %>
        </div>

        <div class="mb-3">
          <%= form.label :parent_id, "Parent Organization", class: "form-label fw-bold" %>
          <%= form.select :parent_id, 
                options_for_select(Organization.all.pluck(:name, :id)), 
                include_blank: "None", 
                class: "form-select" %>
        </div>

        <div class="mt-4 d-flex justify-content-end">
          <%= form.submit "Create Organization", class: "btn btn-primary px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
