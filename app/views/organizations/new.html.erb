<div class="container">
  <h1>Create New Organization</h1>

  <%= form_with model: @organization, url: organizations_path, method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "Organization Name" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :parent_id, "Parent Organization" %>
      <%= form.select :parent_id, options_for_select(Organization.all.pluck(:name, :id)), include_blank: true, class: "form-control" %>
    </div>

    <%= form.submit "Create Organization", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to Organizations", organizations_path, class: "btn btn-secondary mt-3" %>
</div>
