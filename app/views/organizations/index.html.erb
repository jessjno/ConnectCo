<div id="accordion">
  <% @organizations.each_with_index do |organization, index| %>
    <div class="card">
      <div class="card-header" id="heading<%= index %>">
        <h5 class="mb-0">
          <button class="btn btn-link <%= 'collapsed' unless index == 0 %>" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="<%= index == 0 %>" aria-controls="collapse<%= index %>">
            <%= organization.name %>
          </button>
        </h5>
      </div>

      <div id="collapse<%= index %>" class="collapse <%= 'show' if index == 0 %>" aria-labelledby="heading<%= index %>" data-parent="#accordion">
        <div class="card-body">
          <p><%= organization.description %></p>
          <%= link_to "View Details", organization_path(organization), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
